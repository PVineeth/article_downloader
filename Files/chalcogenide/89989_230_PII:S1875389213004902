            <ce:title id="tit0005">Photo-induced and Thermal Annealing of Chalcogenide Films for Waveguide Fabrication</ce:title>
            <ce:author-group id="aug0005">
               <ce:author id="aut0005">
                  <ce:given-name>Duk-Yong</ce:given-name>
                  <ce:surname>Choi</ce:surname>
                  <ce:cross-ref id="crf0005" refid="cor0005">
                     <ce:sup loc="post">⁎</ce:sup>
                  </ce:cross-ref>
                  <ce:e-address id="eadd0005" type="email">dyc111@physics.anu.edu.au</ce:e-address>
               </ce:author>
               <ce:author id="aut0010">
                  <ce:given-name>Andrew</ce:given-name>
                  <ce:surname>Wade</ce:surname>
               </ce:author>
               <ce:author id="aut0015">
                  <ce:given-name>Steve</ce:given-name>
